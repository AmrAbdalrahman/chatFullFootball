{{#section 'styles'}}
    <link rel="stylesheet" href="/css/group.css">
    <link rel="stylesheet" href="/css/profile.css">
{{/section}}

{{#section 'title'}}
    {{title}}
{{/section}}

{{#section 'header'}}
    {{> _header}}
{{/section}}


<div class="col-md-12 mob-clearfix margin-80">
    <input type="hidden" id="name-user" value="{{data.username}}">
    <input type="hidden" id="name-image" value="{{data.userImage}}">

    <div class="col-md-12">
        <div class="chat_container">
            <div class="row">
                <!-- LEFT -->

                <div class="col-sm-4 col-md-3">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="profile-sidebar">
                                <div class="img-container">
                                    <img src="https://fotballkik.s3.amazonaws.com/{{user.userImage}}"
                                         class="img-responsive img-user" id="show_img">
                                </div>

                                <div class="profile-usertitle">
                                    <div class="profile-usertitle-name">
                                        {{data.fullname}}
                                    </div>
                                    <div class="profile-usertitle-job">
                                        {{data.username}}
                                    </div>
                                </div>

                                <div class="profile-usermenu">
                                    <ul class="nav">
                                        <li>
                                            <a href="/profile/{{data.username}}" style="color:#4aa1f3 !important">
                                                <i class="fa fa-home" style="color:#4aa1f3 !important"></i>
                                                Overview
                                            </a>
                                        </li>

                                    </ul>
                                </div>

                            </div>
                        </div>

                    </div>


                </div>


                <!--MIDDLE-->
                <div class="col-sm-8 col-md-9 mob-50">
                    <form method="post" action="">

                        <div style="margin-top: 20px;">
                            <div class="user-display">

                                <h3 class="user-display-head" style="color:#4aa1f3 !important">Favourite Clubs</h3>
                                <hr/>
                                {{#each data.favClub}}
                                    <p style="margin-bottom:30px; color:#4aa1f3">
                                        <span class="glyphicon glyphicon-check" style="color: grey;">{{clubName}}</span>
                                    </p>
                                {{/each}}
                            </div>
                        </div>


                        <div style="margin-top: 20px;">
                            <div class="user-display">

                                <h3 class="user-display-head" style="color:#4aa1f3 !important">Favourite Players</h3>
                                <hr/>
                                {{#each data.favPlayer}}
                                    <p style="margin-bottom:30px; color:#4aa1f3">
                                        <span class="glyphicon glyphicon-check" style="color: grey;">{{playerName}}</span>
                                    </p>
                                {{/each}}

                            </div>
                        </div>


                        <div style="margin-top: 20px;">
                            <div class="user-display">

                                <h3 class="user-display-head" style="color:#4aa1f3 !important">Favourite National
                                    Teams</h3>
                                <hr/>
                                {{#each data.favNationalTeam}}
                                    <p style="margin-bottom:30px; color:#4aa1f3">
                                        <span class="glyphicon glyphicon-check" style="color: grey;">{{teamName}}</span>
                                    </p>
                                {{/each}}

                            </div>
                        </div>

                    </form>
                </div>


            </div>

        </div>
    </div>

</div>

{{#section 'script'}}
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/messagelink.js"></script>
    <script src="/js/group/sendRequest.js"></script>
    <script src="/js/user/interest.js"></script>
    <script src="/js/home.js"></script>
    <script src="/js/global.js"></script>
    <script src="/js/deparam.js"></script>
{{/section}}


